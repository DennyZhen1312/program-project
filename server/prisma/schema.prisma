generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shift {
  id        Int      @id @default(autoincrement())
  name      String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
}

model Station {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
}

enum Role {
  MANAGER
  EMPLOYEE
}

model Employee {
  id                      Int      @id @default(autoincrement())
  name                    String
  email                   String   @unique
  createdAt               DateTime @default(now())
  isAvailabilityRequested Boolean  @default(false) @map("is_availability_requested")
  role                    Role     @default(EMPLOYEE)

  employeeAvailabilities EmployeeAvailability[]
  userSchedules          UserSchedule[]
}

model Schedule {
  id            Int            @id @default(autoincrement())
  startDate     DateTime       @map("start_date")
  endDate       DateTime       @map("end_date")
  userSchedules UserSchedule[]
  availability  Availability?

  @@map("schedules")
}

model UserSchedule {
  employeeId Int      @map("employee_id")
  employee   Employee @relation(fields: [employeeId], references: [id])
  scheduleId Int      @map("schedule_id")
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  startTime  DateTime @map("start_time") @db.Timestamp(3)
  endTime    DateTime @map("end_time") @db.Timestamp(3)

  @@id([employeeId, scheduleId])
  @@map("user_schedules")
}

model Availability {
  id         Int                    @id @default(autoincrement())
  startDate  DateTime               @map("start_date")
  endDate    DateTime               @map("end_date")
  createdAt  DateTime               @default(now())
  scheduleId Int                    @unique
  schedule   Schedule               @relation(fields: [scheduleId], references: [id])
  employees  EmployeeAvailability[]

  @@map("availabilities")
}

model EmployeeAvailability {
  id             Int          @id @default(autoincrement())
  employeeId     Int          @map("employee_id")
  employee       Employee     @relation(fields: [employeeId], references: [id])
  availabilityId Int          @map("availability_id")
  availability   Availability @relation(fields: [availabilityId], references: [id])

  @@unique([employeeId, availabilityId]) // Ensures unique combinations
  @@map("employee_availability")
}
